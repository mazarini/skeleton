<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
              rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
              crossorigin="anonymous">
        {% block stylesheets %}
        <style>
            body {
                margin-top: 1rem;
            }
            .btn {
                min-width: 10rem;
            }
        </style>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% include('@MazariniMessage/_messages.html.twig') %}
            {% block body %}
                <div class="mt-2 d-flex justify-content-evenly">
                    <a class="btn btn-info" href="/info" role="button">info</a>
                    <a class="btn btn-warning" href="/warning" role="button">warning</a>
                    <a class="btn btn-danger" href="/error" role="button">error</a>
                </div>
                <div class="mt-2 d-flex justify-content-evenly">
                    <a class="mt-2 btn btn-success" href="/success" role="button">success</a>
                    <a class="mt-2 btn btn-danger" href="/danger" role="button">danger</a>
                </div>
                <div class="mt-2 d-flex justify-content-evenly">
                    <a class="btn btn-danger" href="/default" role="button">default</a>
                </div>
                <div class="mt-2 d-flex justify-content-evenly">
                    <a class="btn btn-primary" href="/primary" role="button">primary</a>
                    <a class="btn btn-secondary" href="/secondary" role="button">secondary</a>
                </div>
                <div class="mt-2 d-flex justify-content-evenly">
                    <a class="btn btn-light" href="/light" role="button">light</a>
                    <a class="btn btn-dark" href="/dark" role="button">dark</a>
                </div>
                <div class="mt-2 d-flex justify-content-evenly">
                    <a class="btn btn-dark" href="/dark/light/dark" role="button">dark light dark</a>
                </div>
            {% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
                    crossorigin="anonymous"></script>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
