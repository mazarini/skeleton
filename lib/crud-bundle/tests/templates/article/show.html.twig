{% extends 'base.html.twig' %}

{%  block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Label</th>
                <td>{{ entity.label }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>
    <div class="mt-2 d-flex justify-content-evenly">
        <a class="btn btn-primary" href="{{ path('app_article_index') }}">Back</a>
        <a class="btn btn-primary" href="{{ path('app_article_edit', {'id': entity.id}) }}">Edit</a>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
    </div>
{% endblock %}

{% block static %}
    {{ parent() }}
    {% embed '@MazariniCrud/_delete_form.html.twig' %}
        {% block delete_href %}{{ path('app_article_delete', {'id': entity.id}) }}{% endblock %}
        {% block delete_text %}{{ parent() }}{% endblock %}
    {% endembed %}
{% endblock %}
